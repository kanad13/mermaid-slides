{
	"name": "mermaid-slides",
	"version": "1.0.0",
	"description": "Transform your markdown mermaid diagrams into beautiful presentation slides",
	"type": "module",
	"scripts": {
		"dev": "vite --config config/vite.config.js",
		"build": "vite build --config config/vite.config.js",
		"preview": "vite preview --config config/vite.config.js",
		"lint": "eslint . --config config/eslint.config.js --report-unused-disable-directives --max-warnings 0",
		"test": "vitest --config config/vite.config.js",
		"test:ui": "vitest --ui --config config/vite.config.js",
		"test:run": "vitest run --config config/vite.config.js",
		"validate:compatibility": "node scripts/validate-compatibility.cjs",
		"validate:continuity": "node scripts/validate-continuity.cjs",
		"validate:all": "npm test && npm run validate:compatibility && npm run validate:continuity",
		"extension:install": "cd extension && npm install",
		"extension:compile": "cd extension && npm run compile",
		"extension:watch": "cd extension && npm run watch",
		"extension:package": "cd extension && npm run package",
		"extension:lint": "cd extension && npm run lint",
		"build:all": "npm run build && npm run extension:compile"
	},
	"keywords": [
		"mermaid",
		"markdown",
		"presentation",
		"slides",
		"diagrams",
		"visualization",
		"react",
		"documentation"
	],
	"author": "Your Name <your-email@example.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/yourusername/mermaid-slides.git"
	},
	"bugs": {
		"url": "https://github.com/yourusername/mermaid-slides/issues"
	},
	"homepage": "https://github.com/yourusername/mermaid-slides#readme",
	"dependencies": {
		"lucide-react": "^0.525.0",
		"mermaid": "^11.7.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react-swc": "^3.10.2",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.0.0",
		"eslint-plugin-react": "^7.35.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.12",
		"globals": "^16.2.0",
		"jsdom": "^26.1.0",
		"postcss": "^8.4.47",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead",
		"not ie 11"
	]
}
